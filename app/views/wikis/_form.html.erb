<div class="new-form">

<h4>FYI: you can also use markdown</h4>

<%= form_for [wiki] do |f| %>
<%= f.label :title %>
<%= f.text_field :title, class: 'form-control' %><br/>
<%= f.label :body %>
<%= f.text_area :body, class: 'form-control', :rows => "15" %><br/>

<% if current_user.role == 'admin' || current_user.role == 'premium' %>
  <%= f.label :private, class: 'checkbox' do %>
  <%= f.check_box :private %> Private wiki
  <% end %>
<% end %>

<%= f.submit "Save" %>

<% end %>
</div>