<div class="preview-wikis-container">
   
   
  <div class="btn-group">
    <button class= "glyphicon glyphicon-cog" data-toggle="dropdown" aria-expanded="false">    
    </button>

    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "edit", edit_wiki_path(wiki)%></li>
      <li><%= link_to "delete", wiki, method: :delete %></li>
    </ul>
  </div>

  <div class="preview-wikis">
    <h5><%= wiki.title %></h5>
    <p><%= time_ago_in_words(wiki.created_at)%> ago </p>
    <%= wiki.body.truncate_words(10) %>
    <%= link_to "read more", wiki %>
  </div>

</div>




