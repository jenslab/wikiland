<div class="preview-wikis-container"> 
  <div class="fixed-size">

    <div class="btn-group">
      <button class= "glyphicon glyphicon-cog" data-toggle="dropdown" aria-expanded="false">    
    </button>

    <ul class="dropdown-menu pull-right" role="menu">
      <li><%= link_to "edit", edit_wiki_path(wiki)%></li>
      <li><%= link_to "delete", wiki, method: :delete %></li>
    </ul>
  </div>

    <div class="preview">
      <h4><%= wiki.title %></h4>
      <p><%= time_ago_in_words(wiki.created_at)%> ago</p>
      <p><%= markdown wiki.body.truncate_words(15) %></p> 
    </div>
    <div class="link"><%= link_to "read more", wiki %></div>

    
</div><!-- fixed-size closing tag -->
</div><!-- preview-wikis-container closing tag -->




